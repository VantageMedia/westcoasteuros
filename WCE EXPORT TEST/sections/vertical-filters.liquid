{% liquid
  assign is_empty = true
  for block in section.blocks
    if block.settings.title != blank
      assign is_empty = false
    endif
  endfor

  if section.settings.collections != blank
    assign is_empty = false
  endif

  assign hide_because_empty = false
  if request.design_mode == false and section.settings.hide_if_empty and is_empty
    assign hide_because_empty = true
  endif
%}
{%- unless hide_because_empty -%}
  {{ 'section-vertical-filters.css' | asset_url | stylesheet_tag }}
  {{ 'component-tooltip.css' | asset_url | stylesheet_tag }}

  <script src="{{ 'section-filters.js' | asset_url }}" defer="defer"></script>

  {% liquid
    assign fetch_priority = 'auto'
    if section.index == 1
      assign fetch_priority = 'high'
    endif
  %}

  <style>
    #shopify-section-{{ section.id }} .block-section {
    	margin-top: {{ section.settings.spacing_top | times: 0.8 | round: 0 }}px;
    	margin-bottom: {{ section.settings.spacing_bottom | times: 0.8 | round: 0 }}px;
    }

    @media (min-width: 990px) {
    	#shopify-section-{{ section.id }} .block-section {
    		margin-top: {{ section.settings.spacing_top }}px;
    		margin-bottom: {{ section.settings.spacing_bottom }}px;
    	}
    }

    {% if section.settings.overlay_background != blank %}
    #shopify-section-{{ section.id }} .section-vertical-filters-wrap-inner::after {
    	background: {{ section.settings.overlay_background }};
    }

    @media (min-width: 990px) {
    	#shopify-section-{{ section.id }} .section-vertical-filters-content-inner {
    		max-width: {{ section.settings.content_width }}%;
    	}
    }
    {% endif %}
  </style>

  {%- capture visibility_classes -%}{%- render 'section-visibility-classes' -%}{%- endcapture -%}
  {%- assign visibility_classes = visibility_classes | strip -%}

  <div class="{{ visibility_classes }}">
    <div class="{% if section.settings.full_width %} block-section-fullwidth{% else %} container{% endif %}">
      <div class="block-section">
        <div class="section-vertical-filters-wrap color-{{ section.settings.color_scheme }}">
          <div class="section-vertical-filters-wrap-inner {% if section.settings.mobile_background_image != blank %} section-vertical-filters-with-mobile-media{% endif %}">
            <div class="section-vertical-filters-content-wrap">
              {% if section.settings.full_width %}
                <div class="container">
              {% endif %}
              <div class="section-vertical-filters-content section-vertical-filters-form-{{ section.settings.filters_position }}">
                <div class="section-vertical-filters-content-inner-wrap">
                  <div class="section-vertical-filters-content-inner">
                    {% if section.settings.heading != blank %}
                      <{{ section.settings.heading_tag }} class="section-vertical-filters-title h2 section-vertical-filters-title-{{ section.settings.mobile_heading_size }} section-vertical-filters-title-desktop-{{ section.settings.heading_size }}">
                        {{ section.settings.heading }}
                      </{{ section.settings.heading_tag }}>
                    {% endif %}
                    {% if section.settings.text != blank %}
                      <div class="section-vertical-filters-caption">
                        {{ section.settings.text }}
                      </div>
                    {% endif %}
                    {% if section.settings.button_label != blank %}
                      <a
                        href="{{ section.settings.link }}"
                        class="button button-large-desktop"
                        {% if section.settings.link == blank %}
                          aria-disabled="true"
                        {% endif %}
                      >
                        {{ section.settings.button_label | escape }}
                      </a>
                    {% endif %}
                  </div>
                </div>

                <div class="section-vertical-filters-form-wrap">
                  <div class="section-vertical-filters-form-wrap-inner color-{{ section.settings.filters_color_scheme }}">
                    {% if section.settings.filters_heading != blank %}
                      <h3 class="section-vertical-filters-form-heading h4">
                        {{ section.settings.filters_heading }}
                      </h3>
                    {% endif %}
                    <collections-filtering>
                      <form action="" method="get" class="section-vertical-filters-form">
                        {% if section.settings.collections.count > 1 %}
                          <div class="form-group">
                            {% if section.settings.collections_tooltip != empty %}
                              <div class="label-with-tooltip">
                            {% endif %}
                            <label for="{{ section.id }}-collection">
                              {{ section.settings.collections_label }}
                            </label>
                            {% if section.settings.collections_tooltip != empty %}
                              <button
                                type="button"
                                class="tooltip"
                                aria-label="{{ section.settings.collections_tooltip }}"
                              >
                                <span>{{ section.settings.collections_tooltip }}</span>
                              </button>
                            {% endif %}
                            {% if section.settings.collections_tooltip != empty %}
                              </div>
                            {% endif %}

                            <select
                              class="dropdown-collection"
                              id="{{ section.id }}-collection"
                              data-index="0"
                            >
                              <option class="default" value="" selected hidden>
                                {{ section.settings.collections_label }}
                              </option>
                              {% for collection in section.settings.collections %}
                                <option value="{{ collection.url }}">{{ collection.title }}</option>
                              {% endfor %}
                            </select>
                          </div>
                        {% endif %}

                        {% if section.settings.collections.count == 1 %}
                          {% assign collection = section.settings.collections | first %}
                          <input
                            class="input-collection"
                            aria-label="{{ collection.title }}"
                            type="text"
                            hidden
                            value="{{ collection.url }}"
                          >
                        {% endif %}

                        {% for block in section.blocks %}
                          {% liquid
                            assign start_disabled = true
                            if section.settings.collections.count < 2 and forloop.index == 1
                              assign start_disabled = false
                            endif
                          %}
                          <div class="form-group {% if start_disabled %}disabled{% endif %}">
                            {% if block.settings.tooltip != empty %}
                              <div class="label-with-tooltip">
                            {% endif %}
                            <label for="{{ section.id }}-filter-{{ forloop.index }}">
                              {{ block.settings.placeholder }}
                            </label>
                            {% if block.settings.tooltip != empty %}
                              <button
                                type="button"
                                class="tooltip"
                                aria-label="{{ block.settings.tooltip }}"
                              >
                                <span>{{ block.settings.tooltip }}</span>
                              </button>
                            {% endif %}
                            {% if block.settings.tooltip != empty %}
                              </div>
                            {% endif %}

                            <select
                              class="dropdown-filter"
                              id="{{ section.id }}-filter-{{ forloop.index }}"
                              data-label="{{ block.settings.title }}"
                              data-index="{{ forloop.index }}"
                              {% if start_disabled %}
                                disabled
                              {% endif %}
                            >
                              <option class="default" value="" selected disabled>
                                {{ block.settings.placeholder }}
                              </option>
                            </select>
                          </div>
                        {% endfor %}

                        <button type="submit" disabled class="button button-block">
                          {{ 'sections.filters.search' | t }}
                          <div class="button-overlay-spinner hidden">
                            <span class="spinner-xs"></span>
                          </div>
                        </button>
                      </form>
                    </collections-filtering>
                  </div>
                </div>
              </div>
              {% if section.settings.full_width %}
                </div>
              {% endif %}

              {%- if section.settings.background_image != blank -%}
                {% capture image_sizes %}
							{% if section.settings.full_width %}
								100vw
							{% else %}
								(min-width: 1540px) 1540px, calc(100vw - 3rem)
							{% endif %}
						{% endcapture %}

                {{
                  section.settings.background_image
                  | image_url: width: 3840
                  | image_tag:
                    class: 'section-vertical-filters-backdrop section-vertical-filters-backdrop-desktop',
                    widths: '390, 768, 820, 1024, 1180, 1440, 1780, 1920, 2048, 3000, 3840',
                    sizes: image_sizes,
                    fetchpriority: fetch_priority
                }}

                {%- if section.settings.mobile_background_image -%}
                  {{
                    section.settings.mobile_background_image
                    | image_url: width: 3840
                    | image_tag:
                      class: 'section-vertical-filters-backdrop section-vertical-filters-backdrop-mobile',
                      widths: '390, 768, 820, 1024, 1180, 1440, 1780, 1920, 2048, 3000, 3840',
                      sizes: image_sizes,
                      fetchpriority: fetch_priority
                  }}
                {% endif %}
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{%- endunless -%}
{% schema %}
  {
    "name": "t:sections.vertical_filters.name",
    "tag": "section",
    "class": "section section-vertical-filters",
    "disabled_on": {
      "groups": ["header", "footer", "custom.overlays"]
    },
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.section_background_media.heading"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "t:sections.vertical_filters.settings.background_image.label"
      },
      {
        "type": "color_background",
        "id": "overlay_background",
        "label": "t:sections.all.gradient.overlay_background.label",
        "default": "linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.8) 100%)"
      },
      {
        "type": "header",
        "content": "t:sections.all.section_content.heading"
      },
      {
        "type": "inline_richtext",
        "id": "heading",
        "default": "Vertical filters",
        "label": "t:sections.vertical_filters.settings.heading.label"
      },
      {
        "type": "select",
        "id": "heading_size",
        "label": "t:sections.vertical_filters.settings.heading_size.label",
        "default": "xl",
        "options": [
          {
            "value": "sm",
            "label": "t:sections.vertical_filters.settings.heading_size.options.label_sm"
          },
          {
            "value": "md",
            "label": "t:sections.vertical_filters.settings.heading_size.options.label_md"
          },
          {
            "value": "lg",
            "label": "t:sections.vertical_filters.settings.heading_size.options.label_lg"
          },
          {
            "value": "xl",
            "label": "t:sections.vertical_filters.settings.heading_size.options.label_xl"
          },
          {
            "value": "xxl",
            "label": "t:sections.vertical_filters.settings.heading_size.options.label_xxl"
          }
        ]
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "t:sections.vertical_filters.settings.text.label",
        "default": "<p>Write a compelling summary here that motivates customers to take action.</p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "t:sections.vertical_filters.settings.button_label.label",
        "default": "Learn more"
      },
      {
        "type": "url",
        "id": "link",
        "label": "t:sections.vertical_filters.settings.link.label"
      },
      {
        "type": "header",
        "content": "t:sections.all.layout.heading"
      },
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "t:sections.vertical_filters.settings.full_width.label",
        "default": false
      },
      {
        "type": "range",
        "id": "content_width",
        "min": 10,
        "max": 100,
        "step": 1,
        "default": 65,
        "label": "t:sections.vertical_filters.settings.content_width.label",
        "info": "t:sections.vertical_filters.settings.content_width.info"
      },
      {
        "type": "header",
        "content": "t:sections.vertical_filters.settings.header_filters.content"
      },
      {
        "type": "select",
        "id": "filters_position",
        "label": "t:sections.vertical_filters.settings.filters_position.label",
        "default": "right",
        "options": [
          {
            "value": "left",
            "label": "t:sections.vertical_filters.settings.filters_position.options.label_left"
          },
          {
            "value": "right",
            "label": "t:sections.vertical_filters.settings.filters_position.options.label_right"
          }
        ]
      },
      {
        "type": "text",
        "id": "filters_heading",
        "default": "Search for products",
        "label": "t:sections.vertical_filters.settings.filters_heading.label"
      },
      {
        "type": "collection_list",
        "id": "collections",
        "label": "t:sections.vertical_filters.settings.collections.label",
        "info": "t:sections.vertical_filters.settings.collections.info"
      },
      {
        "type": "text",
        "id": "collections_label",
        "label": "t:sections.vertical_filters.settings.collections_label.label",
        "default": "Select...",
        "visible_if": "{{ section.settings.collections }}"
      },
      {
        "type": "text",
        "id": "collections_tooltip",
        "label": "t:sections.vertical_filters.settings.collections_tooltip.label",
        "visible_if": "{{ section.settings.collections }}"
      },
      {
        "type": "header",
        "content": "t:sections.vertical_filters.settings.header_mobile.content"
      },
      {
        "type": "image_picker",
        "id": "mobile_background_image",
        "label": "t:sections.vertical_filters.settings.background_image.label"
      },
      {
        "type": "select",
        "id": "mobile_heading_size",
        "label": "t:sections.vertical_filters.settings.heading_size.label",
        "default": "md",
        "options": [
          {
            "value": "sm",
            "label": "t:sections.vertical_filters.settings.heading_size.options.label_sm"
          },
          {
            "value": "md",
            "label": "t:sections.vertical_filters.settings.heading_size.options.label_md"
          },
          {
            "value": "lg",
            "label": "t:sections.vertical_filters.settings.heading_size.options.label_lg"
          },
          {
            "value": "xl",
            "label": "t:sections.vertical_filters.settings.heading_size.options.label_xl"
          },
          {
            "value": "xxl",
            "label": "t:sections.vertical_filters.settings.heading_size.options.label_xxl"
          }
        ]
      },
      {
        "type": "header",
        "content": "t:sections.all.colors.heading"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.color_scheme.label",
        "default": "accent-2"
      },
      {
        "type": "color_scheme",
        "id": "filters_color_scheme",
        "label": "t:sections.vertical_filters.settings.filters_color_scheme.label",
        "default": "background-2"
      },
      {
        "type": "header",
        "content": "t:sections.all.section_spacing.heading"
      },
      {
        "type": "range",
        "id": "spacing_top",
        "min": 0,
        "max": 150,
        "step": 2,
        "default": 90,
        "label": "t:sections.all.section_spacing.spacing_top.label"
      },
      {
        "type": "range",
        "id": "spacing_bottom",
        "min": 0,
        "max": 150,
        "step": 2,
        "default": 90,
        "label": "t:sections.all.section_spacing.spacing_bottom.label"
      },
      {
        "type": "header",
        "content": "t:sections.all.advanced.seo_heading.label"
      },
      {
        "type": "select",
        "id": "heading_tag",
        "label": "t:sections.all.advanced.heading_tag.label",
        "default": "h2",
        "options": [
          {
            "value": "h1",
            "label": "H1"
          },
          {
            "value": "h2",
            "label": "H2"
          },
          {
            "value": "h3",
            "label": "H3"
          }
        ]
      },
      {
        "type": "header",
        "content": "t:sections.all.advanced.visibility_heading.label"
      },
      {
        "type": "checkbox",
        "id": "show_on_desktop",
        "default": true,
        "label": "t:sections.all.advanced.show_on_desktop.label"
      },
      {
        "type": "checkbox",
        "id": "show_on_mobile",
        "default": true,
        "label": "t:sections.all.advanced.show_on_mobile.label"
      },
      {
        "type": "checkbox",
        "id": "hide_if_empty",
        "default": false,
        "label": "t:sections.vertical_filters.settings.hide_if_empty.label",
        "info": "t:sections.all.advanced.hide_if_empty.info"
      }
    ],
    "blocks": [
      {
        "type": "filter",
        "name": "t:sections.vertical_filters.settings.blocks.filter.name",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "t:sections.vertical_filters.settings.blocks.filter.settings.title.label",
            "info": "t:sections.vertical_filters.settings.blocks.filter.settings.title.info"
          },
          {
            "type": "text",
            "id": "placeholder",
            "label": "t:sections.vertical_filters.settings.blocks.filter.settings.placeholder.label"
          },
          {
            "type": "text",
            "id": "tooltip",
            "label": "t:sections.vertical_filters.settings.blocks.filter.settings.tooltip.label"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "t:sections.vertical_filters.presets.name",
        "category": "t:sections.all.preset_category.navigation",
        "blocks": [
          {
            "type": "filter",
            "settings": {
              "title": "Brand",
              "placeholder": "Choose a brand..."
            }
          },
          {
            "type": "filter",
            "settings": {
              "title": "Availability",
              "placeholder": "Choose an availability..."
            }
          }
        ]
      }
    ]
  }
{% endschema %}

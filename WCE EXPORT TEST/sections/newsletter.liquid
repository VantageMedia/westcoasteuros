{{ 'section-newsletter.css' | asset_url | stylesheet_tag }}

<style>
  #shopify-section-{{ section.id }} .block-section {
  	margin-top: {{ section.settings.spacing_top | times: 0.8 | round: 0 }}px;
  	margin-bottom: {{ section.settings.spacing_bottom | times: 0.8 | round: 0 }}px;
  }

  @media (min-width: 990px) {
  	#shopify-section-{{ section.id }} .block-section {
  		margin-top: {{ section.settings.spacing_top }}px;
  		margin-bottom: {{ section.settings.spacing_bottom }}px;
  	}
  }

  {% if section.settings.overlay_background != blank %}
  #shopify-section-{{ section.id }} .newsletter-wrap-inner::after {
  	background: {{ section.settings.overlay_background }};
  }

  @media (min-width: 990px) {
  	#shopify-section-{{ section.id }} .newsletter-content-inner {
  		max-width: {{ section.settings.content_width }}%;
  	}
  }
  {% endif %}
</style>

{%- capture visibility_classes -%}{%- render 'section-visibility-classes' -%}{%- endcapture -%}
{%- assign visibility_classes = visibility_classes | strip -%}

<div class="{{ visibility_classes }}">
  <div class="{% if section.settings.full_width %}block-section-fullwidth{% else %}container{% endif %}">
    <div class="block-section">
      <div class="newsletter-wrapper color-{{ section.settings.color_scheme }}">
        <div class="newsletter-wrap-inner {% if section.settings.mobile_background_image != blank %} newsletter-with-mobile-media{% endif %}">
          <div class="newsletter-content-wrap">
            {% if section.settings.full_width %}
              <div class="container">
            {% endif %}
            <div class="newsletter-content newsletter-form-{{ section.settings.form_position }}">
              <div class="newsletter-content-inner-wrap">
                <div class="newsletter-content-inner">
                  {% if section.settings.title != blank %}
                    <{{ section.settings.heading_tag }} class="newsletter-section-title h2 newsletter-section-title-{{ section.settings.mobile_heading_size }} newsletter-section-title-desktop-{{ section.settings.heading_size }}">
                      {{ section.settings.title }}
                    </{{ section.settings.heading_tag }}>
                  {% endif %}
                  {% if section.settings.text != blank %}
                    <div class="newsletter-caption">
                      {{ section.settings.text }}
                    </div>
                  {% endif %}
                  {% if section.settings.button_label != blank %}
                    <a
                      href="{{ section.settings.link }}"
                      class="button button-large-desktop"
                      {% if section.settings.link == blank %}
                        aria-disabled="true"
                      {% endif %}
                    >
                      {{ section.settings.button_label | escape }}
                    </a>
                  {% endif %}
                </div>
              </div>

              <div class="newsletter-section-form-wrap">
                <div class="newsletter-section-form-wrap-inner color-{{ section.settings.form_color_scheme }}">
                  {% if section.settings.form_heading != blank %}
                    <h3 class="newsletter-section-form-heading h4">
                      {{ section.settings.form_heading }}
                    </h3>
                  {% endif %}
                  {%- form 'customer', class: 'newsletter-section-form' -%}
                    <input type="hidden" name="contact[tags]" value="newsletter">

                    <div class="newsletter-section-form-input-wrap">
                      <label for="form-newsletter-email-{{ section.id }}" class="visually-hidden">
                        {{- 'sections.newsletter.email' | t -}}
                      </label>
                      <input
                        type="email"
                        pattern=".+@.+\.(.+\.?)+"
                        name="contact[email]"
                        id="form-newsletter-email-{{ section.id }}"
                        placeholder="{{ 'sections.newsletter.email' | t }}"
                        autocorrect="off"
                        autocapitalize="off"
                        autocomplete="email"
                        value="{{ form.email }}"
                        required
                        {% if form.errors %}
                          autofocus
                          aria-invalid="true"
                          aria-describedby="ContactFooter-error"
                        {% elsif form.posted_successfully? %}
                          aria-describedby="ContactFooter-success"
                        {% endif %}
                      >
                      <button type="submit" class="button button-large-desktop">
                        {{ 'sections.newsletter.submit' | t }}
                      </button>
                    </div>

                    {% if section.settings.consent_checkbox and section.settings.consent_text %}
                      <label
                        class="checkbox-newsletter-consent"
                        for="form-newsletter-consent-{{ section.id }}"
                      >
                        <input
                          type="checkbox"
                          id="form-newsletter-consent-{{ section.id }}"
                          required
                        >
                        <span class="rte">{{ section.settings.consent_text }}</span>
                      </label>
                    {% endif %}

                    {%- if form.errors -%}
                      <small class="newsletter-section-form-error field-error">
                        {{- form.errors.translated_fields.email | capitalize }}
                        {{ form.errors.messages.email -}}
                      </small>
                    {%- endif -%}
                    {%- if form.posted_successfully? -%}
                      <div class="form-status form-status-success" tabindex="-1" autofocus>
                        <h5 class="newsletter-section-form-success-title form-status-title">
                          {{ 'sections.newsletter.success' | t }}
                        </h5>
                      </div>
                    {%- endif -%}
                  {% endform %}
                </div>
              </div>
            </div>
            {% if section.settings.full_width %}
              </div>
            {% endif %}

            {%- if section.settings.background_image != blank -%}
              {% capture image_sizes %}
                {% if section.settings.full_width %}
                  100vw
                {% else %}
                  (min-width: 1540px) 1540px, calc(100vw - 3rem)
                {% endif %}
              {% endcapture %}

              {{
                section.settings.background_image
                | image_url: width: 3840
                | image_tag:
                  class: 'newsletter-backdrop newsletter-backdrop-desktop',
                  widths: '390, 768, 820, 1024, 1180, 1440, 1780, 1920, 2048, 3000, 3840',
                  sizes: image_sizes
              }}

              {%- if section.settings.mobile_background_image -%}
                {{
                  section.settings.mobile_background_image
                  | image_url: width: 3840
                  | image_tag:
                    class: 'newsletter-backdrop newsletter-backdrop-mobile',
                    widths: '390, 768, 820, 1024, 1180, 1440, 1780, 1920, 2048, 3000, 3840',
                    sizes: image_sizes
                }}
              {% endif %}
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "t:sections.newsletter.name",
    "tag": "section",
    "class": "section-newsletter",
    "disabled_on": {
      "groups": ["header", "footer", "custom.overlays"]
    },
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.section_background_media.heading"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "t:sections.newsletter.settings.background_image.label"
      },
      {
        "type": "color_background",
        "id": "overlay_background",
        "label": "t:sections.all.gradient.overlay_background.label",
        "default": "linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.8) 100%)"
      },
      {
        "type": "header",
        "content": "t:sections.all.section_content.heading"
      },
      {
        "type": "inline_richtext",
        "id": "title",
        "label": "t:sections.newsletter.settings.title.label",
        "default": "Our newsletter"
      },
      {
        "type": "select",
        "id": "heading_size",
        "label": "t:sections.newsletter.settings.heading_size.label",
        "default": "xl",
        "options": [
          {
            "value": "sm",
            "label": "t:sections.newsletter.settings.heading_size.options.label_sm"
          },
          {
            "value": "md",
            "label": "t:sections.newsletter.settings.heading_size.options.label_md"
          },
          {
            "value": "lg",
            "label": "t:sections.newsletter.settings.heading_size.options.label_lg"
          },
          {
            "value": "xl",
            "label": "t:sections.newsletter.settings.heading_size.options.label_xl"
          },
          {
            "value": "xxl",
            "label": "t:sections.newsletter.settings.heading_size.options.label_xxl"
          }
        ]
      },
      {
        "type": "inline_richtext",
        "id": "text",
        "label": "t:sections.newsletter.settings.text.label",
        "default": "Subscribe to our newsletter and receive special offers"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "t:sections.newsletter.settings.button_label.label",
        "default": "Learn more"
      },
      {
        "type": "url",
        "id": "link",
        "label": "t:sections.newsletter.settings.link.label"
      },
      {
        "type": "header",
        "content": "t:sections.all.layout.heading"
      },
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "t:sections.newsletter.settings.full_width.label",
        "default": false
      },
      {
        "type": "range",
        "id": "content_width",
        "min": 10,
        "max": 100,
        "step": 1,
        "default": 65,
        "unit": "%",
        "label": "t:sections.newsletter.settings.content_width.label",
        "info": "t:sections.newsletter.settings.content_width.info"
      },
      {
        "type": "header",
        "content": "t:sections.newsletter.settings.header_email_signup.content",
        "info": "t:sections.newsletter.settings.header_email_signup.info"
      },
      {
        "type": "select",
        "id": "form_position",
        "label": "t:sections.newsletter.settings.form_position.label",
        "default": "right",
        "options": [
          {
            "value": "left",
            "label": "t:sections.newsletter.settings.form_position.options.label_left"
          },
          {
            "value": "right",
            "label": "t:sections.newsletter.settings.form_position.options.label_right"
          }
        ]
      },
      {
        "type": "text",
        "id": "form_heading",
        "default": "Newsletter",
        "label": "t:sections.newsletter.settings.form_heading.label"
      },
      {
        "type": "checkbox",
        "id": "consent_checkbox",
        "default": false,
        "label": "t:sections.newsletter.settings.consent_checkbox.label",
        "info": "t:sections.newsletter.settings.consent_checkbox.info"
      },
      {
        "type": "color_scheme",
        "id": "form_color_scheme",
        "label": "t:sections.newsletter.settings.form_color_scheme.label",
        "default": "background-2"
      },
      {
        "type": "richtext",
        "id": "consent_text",
        "label": "t:sections.newsletter.settings.consent_text.label",
        "default": "<p>I agree to receive marketing emails and special deals.</p>",
        "visible_if": "{{ section.settings.consent_checkbox }}"
      },
      {
        "type": "header",
        "content": "t:sections.newsletter.settings.header_mobile.content"
      },
      {
        "type": "image_picker",
        "id": "mobile_background_image",
        "label": "t:sections.newsletter.settings.background_image.label"
      },
      {
        "type": "select",
        "id": "mobile_heading_size",
        "label": "t:sections.newsletter.settings.heading_size.label",
        "default": "md",
        "options": [
          {
            "value": "sm",
            "label": "t:sections.newsletter.settings.heading_size.options.label_sm"
          },
          {
            "value": "md",
            "label": "t:sections.newsletter.settings.heading_size.options.label_md"
          },
          {
            "value": "lg",
            "label": "t:sections.newsletter.settings.heading_size.options.label_lg"
          },
          {
            "value": "xl",
            "label": "t:sections.newsletter.settings.heading_size.options.label_xl"
          },
          {
            "value": "xxl",
            "label": "t:sections.newsletter.settings.heading_size.options.label_xxl"
          }
        ]
      },
      {
        "type": "header",
        "content": "t:sections.all.colors.heading"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.color_scheme.label",
        "default": "accent-1"
      },
      {
        "type": "header",
        "content": "t:sections.all.section_spacing.heading"
      },
      {
        "type": "range",
        "id": "spacing_top",
        "min": 0,
        "max": 150,
        "step": 2,
        "default": 30,
        "label": "t:sections.all.section_spacing.spacing_top.label"
      },
      {
        "type": "range",
        "id": "spacing_bottom",
        "min": 0,
        "max": 150,
        "step": 2,
        "default": 30,
        "label": "t:sections.all.section_spacing.spacing_bottom.label"
      },
      {
        "type": "header",
        "content": "t:sections.all.advanced.seo_heading.label"
      },
      {
        "type": "select",
        "id": "heading_tag",
        "label": "t:sections.all.advanced.heading_tag.label",
        "default": "h2",
        "options": [
          {
            "value": "h1",
            "label": "H1"
          },
          {
            "value": "h2",
            "label": "H2"
          },
          {
            "value": "h3",
            "label": "H3"
          }
        ]
      },
      {
        "type": "header",
        "content": "t:sections.all.advanced.visibility_heading.label"
      },
      {
        "type": "checkbox",
        "id": "show_on_desktop",
        "default": true,
        "label": "t:sections.all.advanced.show_on_desktop.label"
      },
      {
        "type": "checkbox",
        "id": "show_on_mobile",
        "default": true,
        "label": "t:sections.all.advanced.show_on_mobile.label"
      }
    ],
    "presets": [
      {
        "name": "t:sections.newsletter.presets.name",
        "category": "t:sections.all.preset_category.marketing"
      }
    ]
  }
{% endschema %}
